#PRE:introdueix un llista de tuples amb la informaciÃ³ requerida
estudiante1=[]
estudiante2=[]
llista1={}
llista2={}
#Afegir elements a la llista d'estudisantes(Nom, Cognom, Edat, Nota1, Nota2, Nota3).
nombre=str(input("introduce el nombre del alumno: " ))
apellido=str(input("Introduzca los apellidos del estudiante: ") )
edad=int(input("Introduzca la edad del estudiante: "))
nota1_1= int(input("Introduzca la nota del primer examen del estudiante: "))
nota2_1= int(input("Introduzca la nota del segundo examen del estudiante: "))
nota3_1= int(input("Introduzca la nota del tercer examen del estudiante: "))
tupla=(nombre,apellido,edad,nota1_1,nota2_1,nota3_1)
estudiante1.append(tupla)
mediaponderada1=nota1_1*0.3+nota2_1*0.4+nota3_1*0.3
nombre=str(input("introduce el nombre del alumno: " ))
apellido=str(input("Introduzca los apellidos del estudiante: ") )
edad=int(input("Introduzca la edad del estudiante: "))
nota1_2= int(input("Introduzca la nota del primer examen del estudiante: "))
nota2_2= int(input("Introduzca la nota del segundo examen del estudiante: "))
nota3_2= int(input("Introduzca la nota del tercer examen del estudiante: "))
tupla=(nombre,apellido,edad,nota1_2,nota2_2,nota3_2)
estudiante2.append(tupla)
mediaponderada2=nota1_2*0.3+nota2_2*0.4+nota3_2*0.3
if mediaponderada1 >=7:
    print(mediaponderada1)
    llista1[nombre]=mediaponderada1
else:
    if mediaponderada2 >=7:
        print(mediaponderada2)
        llista1[nombre]=mediaponderada2
        
if nota1_1>=8 or nota2_1>=8 or nota3_1>=8:
    print(mediaponderada1)
    llista2[nombre]=mediaponderada1
    
else:
    if nota1_2>=8 or nota2_2>=8 or nota3_2>=8:
        print(mediaponderada2)
        llista2[nombre]=mediaponderada2
